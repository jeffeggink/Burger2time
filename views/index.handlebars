<div class="container">
    <div class="jumbotron"> 
        <img id="brgr" src="/assets/images/brgr.png"> 
        <h1> Eat-Da-Burger! </h1>
    </div>
{{! Available Burgers (Left column)}}
<div class="row">
    <div class="col-lg-6">
        <ul class="list-group">
        {{#each burgers}}
            {{#unless this.devoured}}
            <li class="list-group-item lead">{{this.id}}. {{this.burger_name}}
                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button type="submit" class="btn btn-lg btn-success">EAT IT!</button>
                </form>
            </li>
            {{/unless}}
        {{/each}}
        </ul>
    </div>

{{! Devoured Burgers (Right Column)}}
    <div class="col-lg-6">
    {{#each burgers}}
        {{#if this.devoured}}
            <ul>
                <li class="lead">{{this.id}}. {{this.burger_name}}</li>
            </ul>
        {{/if}}
    {{/each}}
    </div>
</div>

